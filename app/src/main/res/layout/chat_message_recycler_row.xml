<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Tin nhắn bên trái (đối phương) -->
    <LinearLayout
        android:id="@+id/left_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="80dp"
        android:orientation="vertical"
        android:background="@drawable/bg_left_bubble"
        android:elevation="2dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/left_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tin nhắn bên trái"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/left_chat_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="6dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Tin nhắn bên phải (bạn gửi) -->
    <LinearLayout
        android:id="@+id/right_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:orientation="vertical"
        android:background="@drawable/bg_right_bubble"
        android:elevation="2dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/right_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tin nhắn bên phải"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/right_chat_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="6dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>
